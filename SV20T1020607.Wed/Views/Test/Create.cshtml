@model SV20T1020607.Wed.Models.Person
@{
}
<h1>@ViewBag.Title</h1>
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">

            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" name="Name" autofocus value="@Model.Name">
            </div>
            <div class="form-group">
                <label>BirthDay:</label>
                <input type="hidden" name="Birthday" value="@Model.Birthday"/>
                <input type="text" class="form-control date-picker" name="BirthdayInput" value="@Model.Birthday.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))" />
            </div>
            <div class="form-group">
                <label>Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Category">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>

