@model SV20T1020607.DomainModels.Shipper
@{

}
<h1>@ViewBag.Title</h1>
<div class="box box-primary">
    <div class="box-body">
        <div class="form-group">
            @Html.ValidationMessage("Error", new { @style = "color:#f00" })
        </div>
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên người giao hàng (*):</label>
                <input type="text" class="form-control" name="ShipperName" autofocus value="@Model.ShipperName">
                @Html.ValidationMessage(nameof(Model.ShipperName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Điện thoại (*):</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Shipper">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>