@model SV20T1020607.DomainModels.Category
@{

}
<h1>@ViewBag.Title</h1>
<div class="box box-primary">
    <div class="box-body">
        <div class="form-group">
            @Html.ValidationMessage("Error", new { @style = "color:#f00" })
        </div>
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng (*): </label>
                <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Mô tả (*):</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
                @Html.ValidationMessage(nameof(Model.Description), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Category">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>